<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/topic_card_img_height"
    android:layout_marginRight="@dimen/activity_horizontal_padding"
    android:layout_marginLeft="@dimen/activity_horizontal_padding"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/topic_card_padding_horizontal"
        android:paddingRight="@dimen/topic_card_padding_horizontal"
        android:paddingTop="@dimen/topic_card_padding_vertical"
        android:paddingBottom="@dimen/topic_card_padding_vertical">

        <TextView
            android:id="@+id/tv_topic_card_title"
            android:textSize="@dimen/topic_card_title_font_size"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_topic_card_pic"
            android:src="@mipmap/default_topic_pic"
            android:layout_marginLeft="@dimen/topic_card_padding_horizontal"
            android:layout_width="@dimen/topic_card_img_width"
            android:scaleType="centerCrop"
            android:layout_height="match_parent" />
    </LinearLayout>


</android.support.v7.widget.CardView>